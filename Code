import speedtest 

def get_new_speeds():

    speed_test st.Speedtest( ) 
    speed_test.get_best_server()

    ping = speed_test.results.ping 
    download  = speed test.download( ) 
    upload = speed_test.upload()

    #converting to MB per second

    download_mbs = round(download / (10**6), 2) 
